<div class="chat">
  <div class="chat-title">
    <h1 style="color: #F05408;"><%= @other_user.name %></h1>
    <h2>Have a nice day!</h2>
    <figure class="avatar">
      <% if @avatar.file.present?%>
              <%= image_tag @avatar.file %>
          <% else %>
              <%= image_tag @avatar.link %>
          <% end %>
    </figure>
  </div>
<div class="scroll" style="overflow: scroll;">
  <% if @chat.messages.any? %>
      <div class="messages" id="messages" style="font-size: 16px; margin-left: 20px; margin-right:20px;">
        <%= render partial: 'messages/message', collection: @chat.messages.order(id: :asc), locals: {current_user: current_user}%>
      </div>
  <%else%>
      <div id="messages">
      </div>
  <%end%>
</div>
<div class="message-box">
  <%= render partial: 'messages/message_form', locals: {message: @message, chat: @chat}%>
</div>
</div>

<p><%= link_to "Back to list of chats", user_chats_path(current_user.id) %></p>

<script>
    createMessageChannel();
    messageForm();
    //defaults scrolling to bottom
    $(".scroll").scrollTop($(".scroll")[0].scrollHeight);
</script>