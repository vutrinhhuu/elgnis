<div class="wrapper fadeInDown">
  <div id="formContent" style="overflow-y: scroll; height:630px;">
    <!-- Tabs Titles -->
    <h2 class="active"> Login </h2>

    <!-- Icon -->
    <div class="fadeIn first">
      <img src="https://image.flaticon.com/icons/svg/179/179734.svg" id="icon" alt="User Icon" />
    </div>

    <!-- Login Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <% if(flash.any?)%>
          <div id="error_explanation">
            <h2><%= flash.count %> error prohibited login</h2>
            <ul>
              <% flash.each do |key, value| %>
                <li><%= value %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "textIn" %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: "textIn" %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Login" %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>